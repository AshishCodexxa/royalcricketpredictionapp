<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/transperent_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:weightSum="12">

        <TextView
            android:id="@+id/txt_ps_batter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:maxLines="1"
            android:text="@string/desh"
            android:textColor="@color/blue_neon"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ps_batter_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.55"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="@color/textFmBold"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ps_batter_ball"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.55"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="@color/textFmLight"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_ps_batter_4s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="@color/textFmLight"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_ps_batter_6s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="@color/textFmLight"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_ps_batter_sr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/_0"
            android:textColor="@color/textFmLight"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/txt_ps_batter_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>
