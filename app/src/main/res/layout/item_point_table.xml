<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="12">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_weight="1.2"
            app:cardBackgroundColor="@color/white">


            <ImageView
                android:id="@+id/img_item_flag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_flag" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.3"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:text="@string/team"
            android:textAllCaps="true"
            android:textColor="@color/colorTextBlack"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_match_played"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_match_won"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_match_lost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_match_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_match_nrr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="11sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />
</LinearLayout>
